1000 'Rerun code fast if needed by setting KEY1 to 'RUN"BMLL.ASC"<enter>'
1001 KEY1,"RUN"+CHR$(34)+"BMLL.ASC"+CHR$(34)+CHR$(13)
1002 'Start
1003 SCREEN2:SETPAGE0,0:COLOR15,0,1:COLOR=(1,0,0,0):COLOR=(2,7,0,0):COLOR=(3,0,7,0)
1004 'Write messages
1005 OPEN"GRP:"FOROUTPUTAS#1:PSET(16,0):PRINT#1,":redefined chars 0, 1 (A)"
1006 'Set first tile
1007 B%=0:FORJ%=0TO7:READA$:FORI%=0TO3:A%=(ASC(MID$(A$,I%*2+1,1))-33)*16+ASC(MID$(A$,I%*2+2,1))-33:VPOKEB%+J%*4*32+I%,A%:NEXTI%,J%
1008 'Set second tile
1009 B%=4:FORJ%=0TO7:READA$:FORI%=0TO3:A%=(ASC(MID$(A$,I%*2+1,1))-33)*16+ASC(MID$(A$,I%*2+2,1))-33:VPOKEB%+J%*4*32+I%,A%:NEXTI%,J%
1010 'call BMXL to X=0, Y=1 in name table 10=3,14=4;18=5
1011 A2%=&H7:A1%=&HC000:DX%=0:DY%=1+1920:NX%=4:NY%=4:DI%=&b00000000:LO%=0:GOSUB2000
